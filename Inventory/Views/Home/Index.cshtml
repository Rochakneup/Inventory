@model IEnumerable<Inventory.Models.Product>
@{
    Layout = "~/Views/Shared/_LayoutWithFooter.cshtml";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<style>
    /* Existing Styles */
    .card {
        width: 300px;
        margin: auto;
    }

    .card-img-top {
        height: 180px;
        object-fit: cover;
        width: 50%;
        display: block;
        margin: 0 auto;
    }

    .card-body {
        padding: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #0E9BA8 !important;
        border-color: #0E9BA8 !important;
        color: #fff !important;
    }

        .btn-primary:hover {
            background-color: #0C8B97 !important;
            border-color: #0C8B97 !important;
        }

    .btn-secondary {
        background-color: #0E9BA8 !important;
        border-color: #0E9BA8 !important;
        color: #fff !important;
    }

        .btn-secondary:hover {
            background-color: #0C8B97 !important;
            border-color: #0C8B97 !important;
        }

    .display-4 {
        font-size: 2.5rem;
        font-weight: 300;
        color: #333;
    }

    .lead {
        font-size: 1.25rem;
        color: #666;
    }

    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }

    #searchBar {
        width: 500px;
        margin: 0 10px;
    }

    .btn-search {
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
    }

    .chat-window {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 300px;
        height: 400px; /* Minimized height */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        font-family: Arial, sans-serif;
        display: none; /* Initially hidden */
    }

    .chat-header {
        background-color: #0E9BA8;
        padding: 10px; /* Adjusted padding */
        text-align: center;
        border-bottom: 1px solid #ddd;
        position: relative; /* Position relative to place the close button */
    }

       

        .chat-header .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
        }

    .chat-body {
        background-color: #ffffff;
        padding: 10px; /* Adjusted padding */
        height: 250px; /* Adjusted height */
        overflow-y: auto; /* Enable vertical scrolling */
        display: flex; /* Use flexbox */
        flex-direction: column; /* Align messages vertically */
        align-items: flex-start; /* Align content to the start (left) */
        justify-content: flex-start; /* Start aligning messages from top */
    }


    .chat-img {
        width: 50%; /* Adjust as needed */
        height: auto;
        max-height: 100px; /* Adjust as needed */
        margin: 20px 0 10px ; /* Adjust spacing as needed */
    }

    .chat-header h6 {
        margin: 0; /* Remove default margin */
        color: white; /* Adjust color as needed */
        text-align: left; /* Align text to the left */
        padding-left: 10px; /* Optional: Add some padding from the left edge */
    }


    .chat-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 5px; /* Adjusted gap */
    }

        .chat-buttons button {
            background-color: #e6f7ff;
            border: 1px solid #b3e0ff;
            border-radius: 5px;
            padding: 5px 10px; /* Adjusted padding */
            font-size: 12px; /* Adjusted font size */
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .chat-buttons button:hover {
                background-color: #cceeff;
            }

    .chat-input {
        border-top: 1px solid #ddd;
        padding: 10px;
        background-color: #f7f7f7;
    }

        .chat-input input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }


  /*  .chat-icon {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #0E9BA8;
        border-radius: 50%;
        cursor: pointer;
        z-index: 1000;
    }

    .chat-icon-img {
        width: 50px;
        height: 50px; 
        border-radius: 50%;
    }*/
    .chat-icon {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #0E9BA8;
        border-radius: 50%;
        cursor: pointer;
        z-index: 1000;
    }

    .chat-icon-img {
        width: 50px; /* Adjust the size as needed */
        height: 50px; /* Adjust the size as needed */
        border-radius: 50%;
    }

    .chat-bubble {
        position: absolute;
        bottom: 10px; /* Position above the icon */
        left: -20%; /* Position to the left of the icon */
        background-color: #0E9BA8;
        color: white;
        padding: 8px 12px;
        border-radius: 10px;
        font-size: 0.875rem;
        display: none; /* Initially hidden */
        white-space: nowrap; /* Prevents text from wrapping */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform: translateX(-100%);
    }


    .user-message {
        text-align: right;
        margin-bottom: 10px;
        background-color: #0E9BA8;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        display: inline-block;
        max-width: 80%; /* Limit the width of the message */
        align-self: flex-end; /* Align user messages to the right */
    }

    .bot-message {
        text-align: left;
        margin-bottom: 10px;
        background-color: #ddd;
        padding: 5px 10px;
        border-radius: 15px;
        display: inline-block;
        max-width: 80%; /* Limit the width of the message */
        align-self: flex-start; /* Align bot messages to the left */
    }

</style>
<div class="container">
    <!-- Carousel -->
    <div id="productCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/bg1.jpg" class="d-block w-100 carousel-img" alt="Slide 1">
                <div class="carousel-caption d-none d-md-block"></div>
            </div>
            <div class="carousel-item">
                <img src="/assets/bg2.jpg" class="d-block w-100 carousel-img" alt="Slide 2">
                <div class="carousel-caption d-none d-md-block"></div>
            </div>
            <div class="carousel-item">
                <img src="/assets/bg3.jpg" class="d-block w-100 carousel-img" alt="Slide 3">
                <div class="carousel-caption d-none d-md-block"></div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br />

    <!-- Headline Section -->
    <div class="text-center mb-4">
        <h2 class="display-4">Explore Our Products</h2>
        <p class="lead">Discover a variety of products curated just for you. Browse through our latest collections and find your favorites!</p>
    </div>

    <!-- Search and Category Filter -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="search-container">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        All Categories
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = (int?)null })" data-category="All Categories">All Categories</a></li>
                        @foreach (var category in ViewData["Categories"] as List<Inventory.Models.Category>)
                        {
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = category.Id })" data-category="@category.Name">@category.Name</a></li>
                        }
                    </ul>
                </div>
                <input type="text" id="searchBar" class="form-control" placeholder="Search products..." />
                <button id="searchBtn" class="btn btn-primary btn-search">Search</button>
            </div>
        </div>
    </div>

    <!-- Display Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Product Cards -->
    <div id="productContainer" class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4 product-card" data-name="@product.Name">
                <div class="card">
                    <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Price: Rs.@product.Price</p>

                        @if (product.Quantity > 0)
                        {
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="AddToCart" asp-controller="Cart" method="post" class="d-inline">
                                    <div class="form-group">
                                        <label for="quantity@product.Id">Quantity</label>
                                        <input type="number" id="quantity@product.Id" name="quantity" value="1" min="1" class="form-control" style="width: 100px;" />
                                    </div>
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-primary mt-2">Add to Cart</button>
                                </form>
                                <a href="@Url.Action("Details", "PublicProducts", new { id = product.Id })" class="btn btn-primary mt-2">Details</a>
                            }
                            else
                            {
                                <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn btn-primary">Login to Add to Cart</a>
                                <a href="@Url.Action("Details", "PublicProducts", new { id = product.Id })" class="btn btn-primary">Details</a>
                            }
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Out of Stock</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="chat-icon" id="chatIcon">
        <img src="/assets/flabby.jpg" alt="Flabby Icon" class="chat-icon-img">
        <div class="chat-bubble" id="chatBubble">Hi there! Need help?</div>
    </div>



    <div class="chat-window" id="chatWindow">
        <div class="chat-header">
            <h6>flabby</h6>
            <span class="close-btn" id="closeBtn">&times;</span>
        </div>
        <div class="chat-body" id="chatBody">
            <img src="/assets/flabby.jpg" alt="Chat Image" class="chat-img">
        </div>
        <div class="chat-input">
            <input type="text" id="chatInput" placeholder="Type here...">
        </div>
    </div>



</div>

    @section Scripts {

<script>
    document.getElementById('chatIcon').addEventListener('mouseover', function () {
        document.getElementById('chatBubble').style.display = 'block';
    });

    document.getElementById('chatIcon').addEventListener('mouseout', function () {
        document.getElementById('chatBubble').style.display = 'none';
    });


    let initialMessagesDisplayed = false; // Flag to track if initial messages have been displayed

    document.getElementById('chatIcon').addEventListener('click', function () {
        var chatWindow = document.getElementById('chatWindow');
        if (chatWindow.style.display === 'none' || chatWindow.style.display === '') {
            chatWindow.style.display = 'block';
            if (!initialMessagesDisplayed) {
                displayInitialMessages();
                initialMessagesDisplayed = true; // Set the flag to true after displaying initial messages
            }
        } else {
            chatWindow.style.display = 'none';
        }
    });

    document.getElementById('closeBtn').addEventListener('click', function () {
        document.getElementById('chatWindow').style.display = 'none';
    });

    const predefinedResponses = {
            "What items are currently in stock?": "Here are some items currently in stock: 1. Red T-shirt, 2. Blue Jeans, 3. Green Jacket. For a full list, please check our inventory page.",
            "What are the top- selling products this month ?": "The top-selling products this month are: 1. Blue T-shirt, 2. Black Jeans, 3. White Sneakers.",
            "What is the estimated delivery time?": "The estimated delivery time depends on your location and the shipping method selected. Generally, Standard Shipping takes 5-7 business days, Express Delivery takes 2-3 business days, and Next-Day Delivery arrives the next business day.",
            "How can I find specific products on your site?": "You can use the search bar at the top of the page to find specific products. Simply enter the product name or keywords, and you'll see relevant results."
    };

    document.getElementById('chatInput').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
            const userMessage = e.target.value;
            if (userMessage.trim() !== '') {
                displayMessage('User', userMessage);
                if (predefinedResponses[userMessage]) {
                    displayMessage('Bot', predefinedResponses[userMessage]);
                } else {
                    displayMessage('Bot', "I'm not sure how to answer that. Can I help you with something else?");
                }
                e.target.value = '';
            }
        }
    });

    function displayMessage(sender, message) {
        const chatBody = document.getElementById('chatBody');
        const messageElement = document.createElement('div');
        messageElement.className = sender === 'User' ? 'user-message' : 'bot-message';
        messageElement.textContent = message;
        chatBody.appendChild(messageElement);
        chatBody.scrollTop = chatBody.scrollHeight; // Automatically scroll to the bottom
    }


    function displayInitialMessages() {
        const initialMessages = [
            "What's up?",
            "Hey there. This is Flabby, your SmartBot from Inventory.",
        ];
        initialMessages.forEach(message => displayMessage('Bot', message));
    }
</script>
}

</div>
