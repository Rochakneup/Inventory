@model Inventory.Models.Product

@{
    ViewData["Title"] = "Add Product";
}


<h1>Add New Product</h1>
<link rel="stylesheet" href="~/css/create_product.css" asp-append-version="true" />

<div class="table-container">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="table-responsive custom-table-container">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><label asp-for="Name" class="font-weight-bold">Product Name</label></th>
                        <td><input asp-for="Name" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="Price" class="font-weight-bold">Price</label></th>
                        <td><input asp-for="Price" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="ImageUrl" class="font-weight-bold">Image</label></th>
                        <td><input type="file" name="ImageFile" class="form-control-file" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="SupplierId" class="font-weight-bold">Supplier</label></th>
                        <td>
                            <select asp-for="SupplierId" asp-items="ViewBag.SupplierId" class="form-control">
                                <option value="">-- Select Supplier --</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label asp-for="Quantity" class="font-weight-bold">Quantity</label></th>
                        <td><input asp-for="Quantity" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="Description" class="font-weight-bold">Description</label></th>
                        <td><textarea asp-for="Description" class="form-control"></textarea></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group button-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


