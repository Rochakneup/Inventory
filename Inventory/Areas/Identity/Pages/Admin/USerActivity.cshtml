@page
@model Inventory.Areas.Identity.Pages.Admin.UserActivityModel
@{
}

<div class="container my-4">
    <div class="p-4 border rounded shadow-sm bg-white">
        <h1 class="text-center mb-4">User List</h1>

        <div class="row justify-content-between align-items-center mb-4">
            <div class="col-md-8">
                <form method="get" class="d-flex">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search users" aria-label="Search users" aria-describedby="button-search" asp-for="SearchString">
                        <button class="btn btn-outline-secondary" type="submit" id="button-search">Search</button>
                    </div>
                </form>
            </div>
            <div class="col-md-4 text-end">
                <a asp-area="Identity" asp-page="/AdminUserCreation" class="btn btn-success">Create New User</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Login Date</th>
                        <th>Status</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.LoginDate.HasValue)
                                {
                                    @user.LoginDate?.ToString("g")
                                }
                                else
                                {
                                    <span class="text-muted">Never logged in</span>
                                }
                            </td>
                            <td>
                                @if (user.LoginDate.HasValue)
                                {
                                    @user.Status
                                }
                                else
                                {
                                    <span class="text-muted">Inactive</span>
                                }
                            </td>
                            <td>
                                @{
                                    var roles = await Model.GetUserRolesAsync(user);
                                    if (roles.Any())
                                    {
                                        foreach (var role in roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No roles assigned</span>
                                    }
                                }
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    h1 {
        font-family:'Times New Roman', Times, serif;
        font-weight: bold;
    }

    .container{
        font-family:'Times New Roman', Times, serif;
    }

    .table-responsive {
        margin: auto;
        max-width: 100%;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, .075);
    }

    .badge {
        font-size: 0.85em;
    }

    .border, .shadow-sm, .bg-white {
        border: 1px solid #ddd;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        background-color: #fff;
    }
</style>
