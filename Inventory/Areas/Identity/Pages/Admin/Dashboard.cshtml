@page
@model Inventory.Areas.Identity.Pages.Admin.DashboardModel
@{
}
<h1>User List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Login Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @{
                        if (user.LoginDate.HasValue)
                        {
                            @user.LoginDate?.ToString("g")
                        }
                        else
                        {
                            @:N/A
                        }
                    }
                </td>
                <td>
                    @{
                        if (user.LoginDate.HasValue)
                        {
                            @user.Status
                        }
                        else
                        {
                            @:Inactive
                        }
                    }
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>