@page
@model Inventory.Areas.Identity.Pages.Admin.EditModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>

    <style>
        body{
            font-family:'Times New Roman', Times, serif;
        }

        .container-box {
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 650px;
            font-family: 'Times New Roman', Times, serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            font-size: 16px;
            width: 400px;
        }

            .form-container h2 {
                margin-bottom: 10px;
            }

            .form-container .form-group {
                margin-bottom: 14px;
            }

            .form-container label {
                font-weight: bold;
            }

            .form-container input[type="text"],
            .form-container input[type="email"],
            .form-container input[type="tel"],
            .form-container select {
                border: 1px solid #ced4da;
                border-radius: 4px;
                width: 100%;
                height: 40px;
            }

            .form-container input[readonly] {
                background-color: #e9ecef;
                cursor: not-allowed;
            }

        .btn-block {
            font-size: 16px;
            margin-left: 70px;
            background-color: #0E9BA8 !important;
            width: 200px;
        }



            .btn-block:hover {
            background-color: #0C8B97 !important;
            border-color: #0C8B97 !important;
            }

        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h2 {
            margin-left: 90px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="container-box">
                    <div class="center-content">
                        <div class="form-container">
                            <h2>Edit User</h2>
                            <form method="post">
                                <input type="hidden" asp-for="Input.Id" />
                                <div class="form-group">
                                    <label asp-for="Input.UserName">User Name</label>
                                    <input asp-for="Input.UserName" class="form-control" required />
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email">Email</label>
                                    <input asp-for="Input.Email" class="form-control" readonly />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Status">Status</label>
                                    <select asp-for="Input.Status" class="form-control" required>
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-dark btn-block">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

</body>
</html>

