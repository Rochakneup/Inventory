@page
@model RegisterModel
@{
    Layout = "/Views/Shared/_CustomLayoutRegister.cshtml";
}

<h1 class="visually-hidden">@ViewData["Title"]</h1>
<div class="register-background">
    <div class="register-container">
        <div class="register-form">
            <div class="header-container">
                <img src="/assets/logo.png" alt="Logo" class="login-logo" />
                <h2 class="register-title">Create a new account.</h2>
            </div>
            <form id="registerForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.FirstName"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="First Name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.LastName"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="Last Name" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.Address"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" placeholder="Address" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="Phone Number" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.Email"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.Password"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 custom-form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <div class="input-wrapper">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
        <div class="register-illustration">
            <img src="/assets/inven.jpg" alt="Illustration" style="height:400px;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        background-color: #f0f4fa;
        margin: 0;
        padding: 0;
        overflow: hidden; /* Prevent body from scrolling */
    }

    .register-background {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden; /* Prevent background from scrolling */
    }

    .register-container {
        display: flex;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        align-items: flex-start;
        height: 90%; /* Adjust the container height */
        width: 900px;
    }

    .register-form {
        padding: 40px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Align items at the start */
        overflow-y: auto; /* Enable vertical scrolling */
        max-height: 100%; /* Ensure it takes full available height */
    }

        /* Hide scrollbar for Chrome, Safari, and Opera */
        .register-form::-webkit-scrollbar {
            display: none;
        }

    /* Hide scrollbar for IE, Edge, and Firefox */
    .register-form {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
    }

    .header-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .login-logo {
        height: 40px;
        width: 40px;
        margin-right: 20px;
    }

    .register-illustration {
        background: white;
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
        padding: 20px;
        overflow: hidden; /* Prevent the image container from scrolling */
    }

        .register-illustration img {
            width: 100%;
            height: auto;
            max-width: 100%;
            margin-top: 60px;
            margin-right: 50px;
        }

    .register-title {
        font-size: 28px;
        color: #333;
    }

    .custom-form-group {
        margin-bottom: 1rem;
    }

    .input-wrapper {
        display: flex;
        align-items: center;
    }

        .input-wrapper span {
            margin-left: 10px;
            font-size: 14px;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        color: #333;
        height: 40px;
    }

        .form-control::placeholder {
            color: #bbb;
            font-size: 12px;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #0E9BA8;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 18px;
        height: 45px;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #0C8B97;
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 14px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-size: 16px;
    }
</style>
