@page
@model LoginModel
@{
    Layout = "/Views/Shared/_CustomLayout.cshtml";
}

<h1 class="visually-hidden">@ViewData["Title"]</h1>
<div class="login-background">
    <div class="login-container">
        <div class="login-form">
            <div class="login-title-container">
                <img src="/assets/logo.png" alt="Logo" class="login-logo" />
                <h2 class="login-title">Login</h2>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" id="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" id="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <div class="text-center my-4">
                <h6 class="or-text">OR</h6>
            </div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary d-flex align-items-center justify-content-center" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <img src="/assets/google.png" alt="Google logo" class="me-2" style="width: 20px; height: 20px;" />
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        </div>
        <div class="login-illustration">
            <img src="/assets/inven.jpg" alt="Illustration" style="height:300px" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: 'Times New Roman', Times, serif;
        overflow: hidden;
        background-color: #f0f4fa;
    }

    .login-background {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        display: flex;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 900px;
        width: 100%;
    }

    .login-form {
        padding: 40px;
        flex: 1;
    }

    .login-illustration {
        background: white;
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
    }

        .login-illustration img {
            max-width: 100%;
            height: auto;
        }

    .login-title-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .login-title {
        font-size: 24px;
        margin-left: 10px;
        color: #333;
    }

    .login-logo {
        width: 40px;
        height: 40px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        color: #333;
    }

        .form-control::placeholder {
            color: #bbb;
        }



    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #0E9BA8 !important;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
    }

    .btn-outline-primary {
        width: 100%;
        padding: 10px;
        border: 1px solid #0E9BA8;
        color: #0E9BA8;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-outline-primary img {
            margin-right: 10px;
        }

        .btn-outline-primary:hover {
            background-color: #0E9BA8;
            color: white;
        }

    .text-danger {
        color: #ff6b6b;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
    }

    .or-text {
        position: relative;
        display: inline-block;
        padding: 0 1rem;
        background: white;
        color: #333;
    }

        .or-text::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #ddd;
            z-index: -1;
        }
</style>
