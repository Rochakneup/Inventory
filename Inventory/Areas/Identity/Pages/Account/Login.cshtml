@page
@model LoginModel

<h1 class="visually-hidden">@ViewData["Title"]</h1>
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row shadow-lg rounded overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="/assets/inven.jpg" class="img-fluid h-100" alt="Background image" style="width: 450px; height: 550px">
        </div>
        <div class="col-md-6 bg-white p-5">
            <section class="login-section">
                <form id="account" method="post">
                    <h2 class="text-center mb-4">Log in here</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
                <div class="text-center my-4">
                    <h6 class="or-text">OR</h6>
                </div>
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-info">
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary d-flex align-items-center justify-content-center" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <img src="/assets/google.png" alt="Google logo" class="me-2" style="width: 20px; height: 20px;" />
                                        Log in with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: gainsboro;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        height: 100vh;
    }

    .login-section {
        background-color: #ffffff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #ffffff;
        }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input {
        padding: 20px 10px;
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .or-text {
        position: relative;
        display: inline-block;
        padding: 0 15px;
        background: #ffffff;
        z-index: 1;
    }

        .or-text::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #d3d3d3;
            z-index: -1;
        }

    h2, h3 {
        color: #343a40;
    }

    a {
        color: #007bff;
    }

        a:hover {
            color: #0056b3;
        }

    .form-check-label {
        color: #6c757d;
    }
</style>
