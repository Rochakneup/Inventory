@page
@using Inventory.Areas.Identity.Pages
@model AdminUserCreationModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <style>
        .container-box {
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            font-family:'Times New Roman', Times, serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            font-size: 16px;
            width: 400px;
        }

            .form-container h2 {
                margin-bottom: 20px;
            }

            .form-container .form-group {
                margin-bottom: 20px;
            }

            .form-container label {
                font-weight: bold;
            }

            .form-container input[type="text"],
            .form-container input[type="email"],
            .form-container input[type="tel"] {
                border: 1px solid #ced4da;
                border-radius: 4px;
                padding: 15px;
                width: 350px;
                font-size: 16px;
                height: 10px;
            }

                .form-container input[type="text"]::placeholder,
                .form-container input[type="email"]::placeholder,
                .form-container input[type="tel"]::placeholder {
                    color: #a8a8a8;
                }


        .btn-block {
            padding: 10px;
            font-size: 16px;
            margin-left: 80px;
            background-color: dodgerblue;
            width: 200px;
        }

        .btn-block:hover{
            background-color: darkslateblue;
        }

        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .row img {
            margin-top: 100px;
            height:300px;
            width: 300px;
        }

        h2{
            margin-left: 90px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="container-box">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="/assets/create_user.png" alt="Image" class="img-fluid">
                        </div>
                        <div class="col-md-6 center-content">
                            <div class="form-container">
                                <h2>Create User</h2>
                                <form method="post">
                                    <div class="form-group">
                                        <label for="Input_FirstName">First Name</label>
                                        <input type="text" id="Input_FirstName" name="Input.FirstName" class="form-control" placeholder="Enter your First name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Input_LastName">Last Name</label>
                                        <input type="text" id="Input_LastName" name="Input.LastName" class="form-control" placeholder="Enter your Last name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Input_PhoneNumber">Phone number</label>
                                        <input type="text" id="Input_PhoneNumber" name="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Input_Email">Email</label>
                                        <input type="email" id="Input_Email" name="Input.Email" class="form-control" placeholder="Enter your email" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="Input_Address">Address</label>
                                        <input type="text" id="Input_Address" name="Input.Address" class="form-control" placeholder="Enter your address" required>
                                    </div>
                                    <button type="submit" class="btn btn-dark btn-block">Create User</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
